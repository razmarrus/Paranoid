<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".Engi">

    <include
        android:id="@+id/include"
        layout="@layout/content_engi" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:layout_anchor="@+id/include"
        app:layout_anchorGravity="center"
        tools:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="48sp"
            android:background="#efefef"
            android:id="@+id/txtInput"
            android:gravity="right|center_vertical"
            android:maxLength="12"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="8dp"/>

        <ScrollView
            android:id="@+id/activity_main"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/txtInput"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                app:layout_anchor="@+id/include"
                app:layout_anchorGravity="center"
                tools:visibility="visible">


                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="fill"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_goneMarginTop="8dp">
                    

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/btnEqual"
                            android:layout_width="150dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@drawable/button"
                            android:onClick="onEqual"
                            android:text="=" />

                        <Button
                            android:id="@+id/btnChange"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/button"
                            android:onClick="changeActivity"
                            android:text="Basic" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center">

                        <Button
                            android:id="@+id/btnSin"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:background="@drawable/button"
                            android:onClick="onFunction"
                            android:text="sin" />

                        <Button
                            android:id="@+id/btnCos"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/button"
                            android:onClick="onFunction"
                            android:text="cos" />

                        <Button
                            android:id="@+id/btnTan"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/button"
                            android:onClick="onFunction"
                            android:text="tan" />

                        <Button
                            android:id="@+id/btnAbs"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/button"
                            android:onClick="onFunction"
                            android:text="abs" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center">

                        <Button
                            android:id="@+id/btnASin"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:background="@drawable/button"
                            android:onClick="onFunction"
                            android:text="asin" />

                        <Button
                            android:id="@+id/btnACos"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/button"
                            android:onClick="onFunction"
                            android:text="acos" />

                        <Button
                            android:id="@+id/btnATan"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/button"
                            android:onClick="onFunction"
                            android:text="atan" />

                        <Button
                            android:id="@+id/btnSqrt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/button"
                            android:onClick="onFunction"
                            android:text="sqrt" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center">

                        <Button
                            android:id="@+id/btnLog"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:background="@drawable/button"
                            android:onClick="onFunction"
                            android:text="log" />

                        <Button
                            android:id="@+id/btnLog2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/button"
                            android:onClick="onFunction"
                            android:text="log2" />

                        <Button
                            android:id="@+id/btnLog10"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/button"
                            android:onClick="onFunction"
                            android:text="log10" />

                        <Button
                            android:id="@+id/btnCbrt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/button"
                            android:onClick="onFunction"
                            android:text="cbrt" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center">

                        <Button
                            android:id="@+id/btnPi"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:background="@drawable/button"
                            android:onClick="onFunction"
                            android:text="pi" />

                        <Button
                            android:id="@+id/btnExp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/button"
                            android:onClick="onFunction"
                            android:text="e" />

                        <Button
                            android:id="@+id/btnOpenBr"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/button"
                            android:onClick="onOpenBracket"
                            android:text="(" />

                        <Button
                            android:id="@+id/btnCloseBr"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/button"
                            android:onClick="onCloseBracket"
                            android:text=")" />
                    </TableRow>

                </TableLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>